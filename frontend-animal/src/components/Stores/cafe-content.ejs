<main id="main-area" class="max-width-1400px" >
        <!-- CAFE SHOPLIST -->
        <div class="cafe-service">
            <div class="tabs">
                <button class="tab-button" data-region="Hokkaido">北海道</button>
                <button class="tab-button" data-region="Touhoku">東北</button>
                <button class="tab-button" data-region="Kanto">関東</button>
                <button class="tab-button" data-region="Kinki">近畿</button>
                <button class="tab-button" data-region="Tyukoku-Sikoku">中国・四国</button>
                <button class="tab-button" data-region="Kyuushu">九州</button>
            </div>

            <div class="store-list">
                <!-- 北海道 -->
                <div class="tab-content" id="Hokkaido">
                    <div class="cafe-list">
                        <% stores.forEach(store => { %>
                            <% if (store.regions === '北海道') { %>
                                <a href="/stores/<%= store.id %>">
                                <div class="cafe-item">
                                    <div class="photo"><img src='./img/Stores/store-img/<%= store.store_img %>'></div>
                                    <div class="cafe-information">
                                        <h2><%= store.store_name %></h2>
                                        <div class="cafe-detail"><p><%= store.store_address %></p></div>
                                    </div>
                                </div>
                                </a>
                            <% } %>
                        <% }) %>
                    </div>
                </div>
